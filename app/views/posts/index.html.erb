<h1>Listing posts</h1>
 <%= link_to 'New post', new_post_path , :remote=>true%>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.text %></td>
	  <td><%= link_to 'Show', post %></td>
      <td><%= link_to 'Edit', edit_post_path(post)%></td>
	  <td><%= link_to 'Destroy', posts_path(post),:method=>:delete, :data=> { :confirm=> 'Are you sure?' }  %></td>
    </tr>
  <% end %>

  <%= form_tag({action: :upload}, :multipart => true) do %>
      <%= file_field_tag 'picture' %>
  <% end %>
</table>